<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:outlineSpotShadowColor="@android:color/background_dark"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="@dimen/cardview_default_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
            <TextView
                android:id="@+id/menu_name"
                android:text="Name of Menu"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/menu_address"
                android:text="address of Menu"
                android:textColor="@color/darkyellow"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="5dp"

                    android:layout_gravity="center_vertical"

                    android:orientation="horizontal"
                    >



                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/distance"
                        android:scaleType="fitXY"
                        android:id="@+id/menu_direction"
                        android:background="@android:color/white">


                    </ImageButton>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Direction"
                            android:textSize="8dp"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"

                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginRight="2dp">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dining"
                        android:scaleType="fitXY"
                        android:id="@+id/menu_table"
                        android:background="@android:color/white"
                        >

                    </ImageButton>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Book Table"
                            android:textSize="8dp"
                            />
                    </LinearLayout>
<!--                    <Button-->
<!--                        android:id="@+id/menu_direction"-->
<!--                        android:layout_width="80dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:text="direction"-->
<!--                        android:textSize="12dp"-->
<!--                        android:fontFamily="sans-serif-medium"-->
<!--                        android:background="@color/colorPrimaryDark"-->
<!--                        android:textColor="@color/cardview_light_background"-->
<!--                        />-->
<!--                    <Button-->
<!--                        android:id="@+id/menu_table"-->
<!--                        android:layout_width="80dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:text="Book Table"-->
<!--                        android:textSize="12dp"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:fontFamily="sans-serif-medium"-->
<!--                        android:background="@color/colorPrimaryDark"-->
<!--                        android:textColor="@color/cardview_light_background"-->
<!--                        >-->


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
