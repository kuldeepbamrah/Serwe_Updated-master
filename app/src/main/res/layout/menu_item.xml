<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:outlineSpotShadowColor="@android:color/background_dark"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="@dimen/cardview_default_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
            <TextView
                android:id="@+id/menu_name"
                android:text="Name of Menu"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/menu_address"
                android:text="address of Menu"
                android:textColor="@color/darkyellow"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right"
                    android:padding="5dp"

                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/menu_direction"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="direction"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/cardview_light_background"
                        />
                    <Button
                        android:id="@+id/menu_table"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="Book Table"
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/cardview_light_background"
                        >

                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
